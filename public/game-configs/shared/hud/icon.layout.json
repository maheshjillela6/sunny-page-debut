      "style": { "width": 40, "height": 40, "iconSize": 20, "borderRadius": 8 }
    },
    "gameTitle": {
      "id": "gameTitle", "visible": true, "order": 1, "region": "topLeft",
      "style": { "fontSize": 18, "fontWeight": "bold" }
