    "buyBonus": {
      "id": "buyBonus", "label": "BUY BONUS", "icon": "ShoppingCart",
      "visible": true, "order": 1, "region": "rightMiddle",
      "style": { "width": 90, "height": 65, "fontSize": 12, "fontWeight": "bold", "iconSize": 20, "borderRadius": 8, "padding": [6, 10], "opacity": 0.9, "backdrop": true, "glowColor": "#22C55E" }
    }
  },

