{
  "basePath": "/assets/games/slots/dragon-fortune",

  "bundles": {
    "preload": {
      "priority": 0,
      "required": false,
      "assets": [
        { "type": "image", "key": "loading_bg", "path": "images/loading_bg.png" }
      ]
    },
    "core": {
      "priority": 1,
      "required": false,
      "assets": [
        { "type": "image", "key": "background", "path": "images/background.jpg" },
        { "type": "image", "key": "frame", "path": "images/frame.png" },
        { "type": "image", "key": "logo", "path": "images/logo.png" }
      ]
    },
    "symbols": {
      "priority": 2,
      "required": false,
      "assets": [
        { "type": "spritesheet", "key": "symbols_atlas", "path": "atlases/symbols.json", "imagePath": "atlases/symbols0.png" },
        { "type": "image", "key": "symbol_wild", "path": "images/symbols/wild.png" },
        { "type": "image", "key": "symbol_scatter", "path": "images/symbols/scatter.png" },
        { "type": "image", "key": "symbol_link", "path": "images/symbols/link.png" },
        { "type": "image", "key": "symbol_dragon", "path": "images/symbols/dragon.png" },
        { "type": "image", "key": "symbol_phoenix", "path": "images/symbols/phoenix.png" },
        { "type": "image", "key": "symbol_tiger", "path": "images/symbols/tiger.png" },
        { "type": "image", "key": "symbol_jade", "path": "images/symbols/jade.png" },
        { "type": "image", "key": "symbol_coin", "path": "images/symbols/coin.png" },
        { "type": "image", "key": "symbol_scroll", "path": "images/symbols/scroll.png" }
      ]
    },
    "spine": {
      "priority": 2,
      "required": true,
      "assets": [
        { "type": "spine", "key": "bgambient", "path": "spine/bg_scene/Background.json" }
      ]
    },
    "ui": {
      "priority": 4,
      "required": false,
      "assets": [
        { "type": "image", "key": "btn_spin", "path": "images/ui/btn_spin.png" },
        { "type": "image", "key": "btn_menu", "path": "images/ui/btn_menu.png" }
      ]
    },
    "effects": {
      "priority": 5,
      "required": false,
      "assets": [
        { "type": "atlas", "key": "effects_atlas", "path": "atlases/effects.json" }
      ]
    },
    "audio": {
      "priority": 6,
      "required": false,
      "assets": [
        { "type": "audio", "key": "music_base", "path": "audios/base_game.mp3" },
        { "type": "audio", "key": "sfx_spin", "path": "audios/spin.mp3" },
        { "type": "audio", "key": "sfx_win", "path": "audios/win.mp3" },
        { "type": "audio", "key": "sfx_bigwin", "path": "audios/bigwin.mp3" }
      ]
    },
    "fonts": {
      "priority": 7,
      "required": false,
      "assets": [
        { "type": "font", "key": "DragonFont", "path": "fonts/dragon.woff2" }
      ]
    }
  },

  "audio": "audio.json",

  "fallbacks": {
    "missingSymbol": "images/placeholder_symbol.png",
    "missingBackground": "#1a0a0a",
    "useDefaults": true
  }
}