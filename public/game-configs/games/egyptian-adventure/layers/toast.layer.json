{
  "enabled": true,
  "baseY": 22,
  "toastWidth": 310,
  "toastHeight": 52,
  "margin": 10,
  "background": {
    "fill": "#1a1a0f",
    "fillAlpha": 0.95,
    "radius": 8
  },
  "accentBar": { "width": 4, "radius": 2 },
  "border": { "strokeWidth": 1, "strokeAlpha": 0.45, "radius": 8 },
