{
  "basePath": "/assets/games/slots/neon-nights",

  "bundles": {
    "preload": {
      "priority": 0,
      "required": false,
      "assets": [
        { "type": "image", "key": "loading_bg", "path": "images/loading_bg.png" }
      ]
    },

    "core": {
      "priority": 1,
      "required": false,
      "assets": [
        { "type": "image", "key": "background", "path": "images/background.jpg" },
        { "type": "image", "key": "frame", "path": "images/frame.png" },
        { "type": "image", "key": "logo", "path": "images/logo.png" }
      ]
    },

    "symbols": {
      "priority": 2,
      "required": false,
      "assets": [
        { 
          "type": "spritesheet", 
          "key": "symbols_atlas", 
          "path": "atlases/symbols.json",
          "imagePath": "atlases/symbols0.png"
        }
      ]
    },

    "spine": {
      "priority": 2,
      "required": true,
      "assets": [
        { "type": "spine", "key": "bgambient", "path": "spine/bg_scene/Background.json" }
      ]
    },

    "ui": {
      "priority": 4,
      "required": false,
      "assets": [
        { "type": "image", "key": "btn_spin", "path": "images/ui/btn_spin.png" },
        { "type": "image", "key": "btn_menu", "path": "images/ui/btn_menu.png" }
      ]
    },

    "effects": {
      "priority": 5,
      "required": false,
      "assets": [
        { "type": "atlas", "key": "effects_atlas", "path": "atlases/effects.json" }
      ]
    },

    "audio": {
      "priority": 6,
      "required": false,
      "note": "Audio sprites are loaded dynamically by AudioController via audio.json basePath â€” no individual assets needed here.",
      "assets": []
    },

    "fonts": {
      "priority": 7,
      "required": false,
      "assets": [
        { "type": "font", "key": "NeonFont", "path": "fonts/neon.woff2" }
      ]
    }
  },

  "audio": "audio.json",

  "fallbacks": {
    "missingSymbol": "images/placeholder_symbol.png",
    "missingBackground": "#0f0f23",
    "useDefaults": true
  }
}
